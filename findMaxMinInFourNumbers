int main()
{
    int max, min;
    int difference;
    int a;
    scanf("%d", &a);
    int b;
    scanf("%d", &b);
    int c;
    scanf("%d", &c);
    int d;
    scanf("%d", &d);

    max = a;
    if (b > max) 
    {
        max = b;
    }
    if (c > max) 
    {
        max = c;
    }
    if (d > max) 
    {
        max = d;
    }

    min = a;
    if (b < min) 
    {
        min = b;
    }
    if (c < min) 
    {
        min = c;
    }
    if (d < min) 
    {
        min = d;
    }

    difference = max - min;
    printf("%d\n", difference);
 

    return 0;
}
